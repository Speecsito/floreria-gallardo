<script>
let carrito=[];let total=0;
function agregarCarrito(nombre,precio){carrito.push({nombre,precio});total+=precio;actualizarCarrito();}
function actualizarCarrito(){
  document.getElementById('listaCarrito').innerHTML=carrito.map(i=>`â€¢ ${i.nombre} - $${i.precio}`).join('<br>');
  document.getElementById('total').innerText=`Total: $${total} MXN`;
}
function mostrarCarrito(){document.getElementById('carrito').style.display='block';}
function pagar(){alert('Terminal de pago simulada. Total a pagar: $'+total+' MXN');}
function llamar(){window.location.href='tel:6721188142';}
function scrollToSection(id){document.getElementById(id).scrollIntoView({behavior:'smooth'});}
</script>
